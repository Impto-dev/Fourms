{
  "extends": "@istanbuljs/nyc-config-babel",
  "all": true,
  "check-coverage": true,
  "per-file": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 80,
  "include": [
    "backend/**/*.js"
  ],
  "exclude": [
    "backend/tests/**/*.js",
    "backend/config/**/*.js"
  ],
  "reporter": [
    "lcov",
    "text",
    "text-summary"
  ],
  "cache": true,
  "temp-dir": "./coverage/.nyc_output"
} 