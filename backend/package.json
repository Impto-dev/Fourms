{
  "name": "forum-backend",
  "version": "1.0.0",
  "description": "Backend for the forum website",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "mocha --timeout 10000 --exit",
    "test:watch": "mocha --watch --timeout 10000",
    "test:coverage": "nyc mocha --timeout 10000 --exit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "node src/database/migrations/runMigrations.js",
    "build": "npm ci && npm run lint && mkdir -p dist && cp -r src/* dist/ && cp package*.json dist/ && cp .env.example dist/.env"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^6.1.5",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "mysql2": "^3.2.0",
    "sequelize": "^6.31.0",
    "sqlite3": "^5.1.6",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-facebook": "^3.0.0",
    "passport-github": "^1.1.0",
    "rate-limit-redis": "^3.0.2",
    "redis": "^4.6.7",
    "socket.io": "^4.6.1",
    "stripe": "^12.1.1",
    "winston": "^3.8.2",
    "xss-clean": "^0.1.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
} 